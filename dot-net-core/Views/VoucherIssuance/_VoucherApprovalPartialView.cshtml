@model EMenuApplication.ViewModels.VoucherIssuance_VM


@if (Model != null)
{
    <div class="row">
        @if (Model.ApprovedStatus == EMenuApplication.Utility.Helper.Approved)
        {
            <div class="col-lg-12">
                <div class="form-group">
                    <label>Voucher Status : Approved</label>
                </div>
            </div>
        }
        else
        {
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.RadioButtonFor(m => m.IsApproved, "true") Approve
                </div>
            </div>
            <div class="col-lg-6">
                <div class="form-group">
                    @Html.RadioButtonFor(m => m.IsApproved, "false") Reject
                </div>
            </div>
        }
    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                @if (Model.ApprovedStatus == EMenuApplication.Utility.Helper.Approved)
                {
                    @Html.TextAreaFor(m => m.ReasonDescription, new { placeholder = "Enter description", rows = 5, @class = "form-control", autocomplete = "off", @readonly = true })
                }
                else
                {
                    @Html.TextAreaFor(m => m.ReasonDescription, new { placeholder = "Enter description", rows = 5, @class = "form-control", autocomplete = "off" })
                }
            </div>
        </div>
    </div>

    <div class="row text-center">
        <div class="col-lg-12">
            <div class="modal-footer justify-content-between">
                @if (Model.ApprovedStatus != EMenuApplication.Utility.Helper.Approved)
                {
                    <button type="button" class="btn btn-primary" onclick="onSubmit()">Submit</button>
                }
                <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
}
else
{
    <p>Data not found</p>
}
