
@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Voucher Issuance</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Dashboard">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Voucher Issuance</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-lg-10">
                                    <h3 class="card-title float-left">List</h3>
                                </div>
                                <div class="col-lg-2">
                                    @if (EMenuApplication.AppContext.Current.Session.GetInt32("HasVoucherIssuancePermission") == 1)
                                    {
                                        <a asp-action="Index" asp-controller="VoucherIssuance" role="button" class="btn btn-primary float-right">Add</a>

                                    }
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <table id="voucherIssuanceList" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>Voucher Name</th>
                                        <th>Customer Name</th>
                                        <th>Category Name</th>
                                        <th>Subcategory Name</th>
                                        <th>Approval Status</th>
                                        <th class="no-sort" style="text-align:center;">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-delete-voucher-issuance" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the selected voucher issuance?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal" onclick="onDeleteConfirm()">Yes</button>
                <button type="button" class="btn btn-outline-light" data-dismiss="modal" onclick="onDeleteNo()">No</button>
            </div>
        </div>
    </div>
</div>

<div class="modal fade" id="modal-voucher-approval" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Voucher Approval</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body" id="voucherApprovalBody"></div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/custom-script/VoucherIssuance.js"></script>
}

