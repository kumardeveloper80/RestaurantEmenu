@{
    ViewData["Title"] = "List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="content-wrapper">
    <div class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1 class="m-0 text-dark">Menu Items</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item">
                            <a asp-action="Index" asp-controller="Dashboard">Home</a>
                        </li>
                        <li class="breadcrumb-item active">Menu Items</li>
                    </ol>
                </div>
            </div>
        </div>
    </div>

    <div class="content">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    <div class="card">
                        <div class="card-header">
                            <div class="row">
                                <div class="col-lg-2">
                                    <h3 class="card-title float-left">List</h3>
                                </div>
                                <div class="col-lg-3 pb-1">
                                    @Html.DropDownList("ConceptId", ViewBag.ConceptsList as SelectList, "-Select Concept-", new { @class = "form-control" })
                                </div>
                                <div class="col-lg-3 pb-1">
                                    @Html.DropDownList("CategoryId", new SelectList(ViewBag.CategoryList, "Value", "Text"), "-Select Category-", new { @class = "form-control" })
                                </div>
                                <div class="col-lg-3 pb-1">
                                    @Html.DropDownList("MenuItemId", new SelectList(ViewBag.MenuItemList, "Value", "Text"), "-Select Menu Item-", new { @class = "form-control" })
                                </div>
                                <div class="col-lg-1">
                                    <a asp-action="Index" asp-controller="MenuItem" role="button" class="btn btn-primary float-right">Add</a>
                                </div>
                            </div>

                        </div>
                        <div class="card-body">
                            <table id="menuItemList" class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th>PLU</th>
                                        <th>Name</th>
                                        <th>Concept Name</th>
                                        <th>Category</th>
                                        <th>Currency</th>
                                        <th>Price</th>
                                        <th>Label(EN)</th>
                                        <th>Label(AR)</th>
                                        <th class="no-sort text-center">
                                            <select id="status-select">
                                                <option value="Active">Active</option>
                                                <option value="Inactive">Inactive</option>
                                                <option value="All">All</option>
                                            </select>
                                        </th>
                                        <th class="no-sort text-center">Action</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


<div class="modal fade" id="modal-delete-menu-item" data-keyboard="false" data-backdrop="static">
    <div class="modal-dialog modal-sm">
        <div class="modal-content bg-danger">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the selected menu item?</p>
            </div>
            <div class="modal-footer justify-content-between">
                <button type="button" class="btn btn-outline-light" data-dismiss="modal" onclick="onDeleteConfirm()">Yes</button>
                <button type="button" class="btn btn-outline-light" data-dismiss="modal" onclick="onDeleteNo()">No</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/custom-script/MenuItem.js"></script>
}