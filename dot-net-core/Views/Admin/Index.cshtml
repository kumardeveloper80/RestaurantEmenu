@model EMenuApplication.ViewModels.Login_VM
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<script>

    document.getElementById("headertext").innerText = "Super Admin"
</script>
<div class="card" id="login">
    <div class="card-body login-card-body">
        <p class="login-box-msg">Sign in to start your session</p>

        @using (Html.BeginForm("Authentication", "Admin", FormMethod.Post, new { role = "form" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })
            <div class="input-group mb-3">
                @Html.TextBoxFor(m => m.Email, new { placeholder = "Email", @class = "form-control" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-envelope"></span>
                    </div>
                </div>
            </div>

            <div class="input-group mb-3">
                @Html.PasswordFor(m => m.Password, new { placeholder = "Password", @class = "form-control" })
                <div class="input-group-append">
                    <div class="input-group-text">
                        <span class="fas fa-lock"></span>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-8">
                    <div class="icheck-primary">
                        @Html.CheckBoxFor(m => m.RememberMe)
                        @Html.LabelFor(m => m.RememberMe)
                    </div>
                </div>
                <div class="col-4">
                    <button type="submit" class="btn btn-primary btn-block">Sign In</button>
                </div>
            </div>
        }
    </div>
</div>
